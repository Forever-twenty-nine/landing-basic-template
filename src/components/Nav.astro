---

interface Link {
    href: string;
    text: string;
}

const links = [
    { text: 'Sobre Nosotros', href:'#about' },
    { text: 'Contacto', href:'#contact' }
]

const {
    class: className = ''
} = Astro.props

---

<nav 
    class="space-x-6 text-sm font-medium">
    <ul 
        class="flex lg:flex-row lg:bg-transparent w-full lg:w-auto z-20 lg:z-auto p-4 lg:p-0  lg:gap-0 transition-all duration-300">
        {
            links.map((link: Link) => (
                <li>
                    <a
                        href={link.href}
                        class={` text-base font-normal text-gray-700 px-3 py-2 mx-1 block transition duration-200 hover:text-blue-600 lg:text-base ${className}`}
                    >
                        {link.text}
                    </a>
                </li>
            ))
        }
    </ul>

</nav>