---
import { config } from "../config";
import Container from "./scaffolding/Container.astro";

---

<footer
    class="bg-gray-900 text-gray-300 py-12 mt-24"
>
    <Container
        class="flex flex-col md:flex-row justify-between items-center gap-8 text-center md:text-left"
    >
        
        <!-- Logo y descripción -->
        <div>
            <h3 class="text-xl font-bold text-white mb-2">
                {config.site}
            </h3>
            <p class="text-sm text-gray-400">
                {config.siteLegend}
            </p>
        </div>

        <!-- Links -->
        <div class="space-x-6">
            <a href="#about" class="text-gray-400 hover:text-white transition"
                >Sobre Nosotros</a
            >
            <a href="#contact" class="text-gray-400 hover:text-white transition"
                >Contacto</a
            >
        </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 text-center text-sm text-gray-500">
        <p>
            © {new Date().getFullYear()} {config.site}. Todos los derechos reservados.
        </p>
        <p>
            Creado por <a href={config.autorUrl} target="_blank">{config.autor}</a>
        </p>
        
    </div>
    </Container>
</footer>
