---
import { config } from "../config";
import Nav from "./Nav.astro";
import Container from "./scaffolding/Container.astro";
---

<header
    class="fixed top-0 left-0 w-full z-50 bg-white shadow-md"
>
    <Container
        class="flex justify-between items-center"
    >

        <!-- Logo -->
        <a 
            href="#hero" 
            class="text-2xl font-bold text-blue-600 tracking-tight"
        >
            {config.site}
        </a
        >

        <Nav />        

    </Container>
</header>