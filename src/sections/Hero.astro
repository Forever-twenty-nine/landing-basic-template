---
import { Image } from "astro:assets";
import heroImg from "../assets/hero.jpg";
import Section from "../components/scaffolding/Section.astro";
import Container from "../components/scaffolding/Container.astro";
import Button from "../components/ui/Button.astro";
---

<Section
    id="hero"
    class="bg-gradient-to-br from-blue-600 via-blue-500 to-indigo-600 text-white pt-20"
>
    <Container>

        <div
            class="flex flex-col-reverse md:flex-row items-center justify-between gap-12"
        >
            <!-- Texto -->
            <div class="md:w-1/2 text-center md:text-left">
                <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">
                    Impulsa tu negocio con presencia digital profesional
                </h1>
                <p class="text-lg mb-8">
                    Creamos sitios web modernos, rápidos y efectivos para
                    ayudarte a destacar en línea y atraer más clientes.
                </p>
                <Button
                    href="#contact">
                    Contáctanos
                </Button>
            </div>

            <!-- Imagen -->
            <div class="md:w-1/2">
                <Image
                    src={heroImg}
                    alt="Negocio digital"
                    class="w-full rounded-xl shadow-lg"
                    loading="lazy"
                />
            </div>
        </div>
    </Container>
    
    <!-- Efecto decorativo -->
    <div
        class="absolute top-0 left-0 w-full h-full bg-gradient-to-tr from-white/10 to-transparent z-0 pointer-events-none"
    >
    </div>

</Section>
